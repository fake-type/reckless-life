---
import { BodyStyled, PageStyled } from '@styles/defaults.css'
import SidePanel from '@features/sidePanel/SidePanel.astro'

type Props = {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="title" content={title} />
    <title>{title}</title>
  </head>

  <body class={BodyStyled}>
    <div class={PageStyled}>
      <SidePanel />
      <slot />
    </div>
  </body>
</html>
