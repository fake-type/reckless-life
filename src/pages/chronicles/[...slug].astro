---
import { CollectionEntry, getCollection } from 'astro:content'
import Document from '@layouts/Document.astro'
import ContentAdapter from '@features/chronicles/components/ContentAdapter/ContentAdapter.tsx'
import Header from '@features/chronicles/components/Header/Header.tsx'

type Props = {
  entry: CollectionEntry<'chronicles'>
}

export async function getStaticPaths() {
  return (await getCollection('chronicles')).map(entry => ({
    params: { slug: entry.slug },
    props: { entry }
  }))
}

const { entry } = Astro.props
const { Content } = await entry.render()
---

<Document title={entry.data.title} description="">
  <ContentAdapter>
    <Header textDisplay={entry.data.title} />
    <Content />
  </ContentAdapter>
</Document>
